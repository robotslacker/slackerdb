<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0">
    <modelVersion>4.0.0</modelVersion>

    <properties>
        <maven.compiler.target>11</maven.compiler.target>
        <maven.compiler.source>11</maven.compiler.source>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <groupId>org.robotslacker</groupId>
    <artifactId>slackerdb</artifactId>
    <version>0.0.8</version>
    <packaging>pom</packaging>

    <modules>
        <module>DbServer</module>
    </modules>

    <build>
        <plugins>
            <!-- Maven Resources Plugin to copy child modules' local jar files -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.3.1</version>
                <executions>
                    <execution>
                        <id>copy-local-child-jars</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/dist/jlib</outputDirectory>
                            <resources>
                                <!-- Specify each child module's target directory -->
                                <resource>
                                    <directory>${project.basedir}/DbServer/target</directory>
                                    <includes>
                                        <include>*-standalone.jar</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
