  "services": [
    {
      "name": "database_query_service",
      "apiName": "database_query_service",
      "version": "1.0",
      "method": "GET",
      "description": "Service for executing database queries with parameter validation",
      "category": "database",
      "capabilities": ["query_execution", "result_formatting", "error_handling"],
      "use_cases": ["data_analysis", "report_generation", "data_validation"],
      "parameters": [
        {
          "name": "sql",
          "type": "string",
          "required": true,
          "description": "SQL query to execute"
        },
        {
          "name": "parameters",
          "type": "array",
          "required": false,
          "description": "Query parameters for prepared statements"
        },
        {
          "name": "timeout",
          "type": "integer",
          "required": false,
          "description": "Query timeout in milliseconds"
        }
      ],
      "examples": [
        {
          "user_query": "Get all users from the database",
          "version": "1.0",
          "method": "GET",
          "parameters": {
            "sql": "SELECT * FROM users",
            "timeout": 5000
          }
        },
        {
          "user_query": "Find users by status",
          "version": "1.0",
          "method": "GET",
          "parameters": {
            "sql": "SELECT * FROM users WHERE status = ?",
            "parameters": ["active"],
            "timeout": 3000
          }
        }
      ]
    },
